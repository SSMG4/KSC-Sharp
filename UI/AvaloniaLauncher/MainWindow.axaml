<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KSCSharp.AvaloniaLauncher.MainWindow"
        Title="KSC-Sharp"
        Width="900" Height="600">
  <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Stretch">
      <TextBlock Text="KSCâ€‘Sharp" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
      <TextBlock Text=" - Avalonia UI (Windows-first scaffold)" Margin="8,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>

    <Grid Grid.Row="1" Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="0">
        <Button x:Name="BtnLaunch2020" Content="Launch 2020" Width="140" />
        <Button x:Name="BtnLaunch2021" Content="Launch 2021" Width="140" />
        <Button x:Name="BtnFastFlags" Content="FastFlags" Width="120" />
        <Button x:Name="BtnDownloadBootstrapper" Content="Download Bootstrapper" Width="200" />
      </StackPanel>

      <ProgressBar x:Name="DownloadProgress" Grid.Row="1" Minimum="0" Maximum="100" Height="18" Margin="0,8,0,0"/>

      <TextBox x:Name="LogTextBox" Grid.Row="2" Height="220" IsReadOnly="True" TextWrapping="Wrap" Margin="0,8,0,0"/>

      <Border Grid.Row="3" BorderThickness="1" CornerRadius="4" BorderBrush="#888" Padding="8" Margin="0,12,0,0">
        <TextBlock Text="Placeholder for Bloxstrap UI content. Copy Bloxstrap assets into UI/Bloxstrap and replace this window's content with their XAML." TextWrapping="Wrap"/>
      </Border>
    </Grid>
  </Grid>
</Window>
