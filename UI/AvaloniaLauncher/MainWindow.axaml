<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KSCSharp.AvaloniaLauncher.MainWindow"
        Title="KSC-Sharp"
        Width="900" Height="600">
  <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Stretch">
      <TextBlock Text="KSC‑Sharp" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
      <TextBlock Text=" – Windows launcher UI" Margin="8,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>

    <Grid Grid.Row="1" Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <!-- Actions -->
      <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="0">
        <Button x:Name="BtnLaunch2020" Content="Launch 2020" Width="140"/>
        <Button x:Name="BtnLaunch2021" Content="Launch 2021" Width="140"/>
        <Button x:Name="BtnFastFlags" Content="FastFlags…" Width="140"/>
        <Button x:Name="BtnDownloadBootstrapper" Content="Download Bootstrapper" Width="200"/>
        <Button x:Name="BtnRegisterUri" Content="Register URI (per-user)" Width="200"/>
        <Button x:Name="BtnUnregisterUri" Content="Unregister URI" Width="160"/>
      </StackPanel>

      <!-- Progress -->
      <StackPanel Orientation="Horizontal" Grid.Row="1" Spacing="8" Margin="0,8,0,0">
        <TextBlock Text="Download:" VerticalAlignment="Center"/>
        <ProgressBar x:Name="DownloadProgress" Minimum="0" Maximum="100" Height="18" Width="300"/>
        <TextBlock x:Name="ProgressText" Text="0%" VerticalAlignment="Center"/>
      </StackPanel>

      <!-- Log -->
      <Grid Grid.Row="2" Margin="0,8,0,0">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="LogTextBox"
                 Grid.Row="0"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0" Spacing="8">
          <Button x:Name="BtnClearLog" Content="Clear log" Width="120"/>
          <Button x:Name="BtnCopyLog" Content="Copy log" Width="120"/>
        </StackPanel>
      </Grid>
    </Grid>
  </Grid>
</Window>
