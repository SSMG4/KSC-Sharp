<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KSCSharp.AvaloniaLauncher.FastFlagsDialog"
        Title="FastFlags"
        Width="600" Height="400"
        CanResize="True">
  <Grid RowDefinitions="Auto,Auto,*" Margin="10">
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBox x:Name="TxtKey" Watermark="Key" Width="180"/>
      <TextBox x:Name="TxtValue" Watermark="Value" Width="220"/>
      <Button x:Name="BtnAddOrUpdate" Content="Add/Update" Width="120"/>
    </StackPanel>

    <TextBlock Grid.Row="1" Margin="0,8,0,8" Text="Flags:" FontWeight="Bold"/>

    <DataGrid Grid.Row="2"
              x:Name="FlagsGrid"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="True">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="*"/>
        <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
      </DataGrid.Columns>
    </DataGrid>

    <Grid RowDefinitions="Auto" VerticalAlignment="Bottom" Margin="0,10,0,0">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button x:Name="BtnSave" Content="Save" Width="100"/>
        <Button x:Name="BtnCancel" Content="Cancel" Width="100"/>
      </StackPanel>
    </Grid>
  </Grid>
</Window>
